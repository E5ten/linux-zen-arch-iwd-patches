pkgbase=linux-zen           # Build stock -zen kernel
#pkgbase=linux-custom       # Build kernel with a different name
_srcver=4.18.6-zen1
pkgver=${_srcver//-/.}
pkgrel=1
arch=(x86_64)
url="https://github.com/zen-kernel/zen-kernel/commits/v$_srcver"
license=(GPL2)
makedepends=(xmlto kmod inetutils bc libelf git python-sphinx graphviz)
options=('!strip')
_srcname=zen-kernel
source=(
  "$_srcname::git+https://github.com/zen-kernel/zen-kernel?signed#tag=v$_srcver"
  config         # the main kernel config file
  60-linux.hook  # pacman hook for depmod
  90-linux.hook  # pacman hook for initramfs regeneration
  linux.preset   # standard config files for mkinitcpio ramdisk
  "provide_key_asymmetric.patch::https://git.kernel.org/pub/scm/linux/kernel/git/dhowells/linux-fs.git/patch/?id=ad42f10731d472da64c5800a7194faea5425d057"
  "provide_keyctls_asymmetric.patch::https://git.kernel.org/pub/scm/linux/kernel/git/dhowells/linux-fs.git/patch/?id=da6331751986554532d9357e51796557a81e5472"
  "provide_missing_asymmetric_subops.patch::https://git.kernel.org/pub/scm/linux/kernel/git/dhowells/linux-fs.git/patch/?id=e306ff741bbe0dc1c481383d19dfcd79832b822e"
  "make_x509_pkcs7.patch::https://git.kernel.org/pub/scm/linux/kernel/git/dhowells/linux-fs.git/patch/?id=6a9dabe494e07f6c1274542e513a9394ba3af9be"
  "provide_software_public_key.patch::https://git.kernel.org/pub/scm/linux/kernel/git/dhowells/linux-fs.git/patch/?id=2c94339eb101c3176d8a797aeea2f77bffe3df17"
  "allow_public_key_hold.patch::https://git.kernel.org/pub/scm/linux/kernel/git/dhowells/linux-fs.git/patch/?id=4303b23d93023abe3824faf4a6f8befaa8de0299"
  "implement_encrypt_decrypt_sign.patch::https://git.kernel.org/pub/scm/linux/kernel/git/dhowells/linux-fs.git/patch/?id=4d674b95900bf7c327b5a0c20d8a6cfe1a7c4156"
  "implement_pkcs_rsa.patch::https://git.kernel.org/pub/scm/linux/kernel/git/dhowells/linux-fs.git/patch/?id=6a195fbbfb71b3e1905751b0f42f41288f0350f9"
  "test_runner_kernel_config::https://git.kernel.org/pub/scm/network/wireless/iwd.git/plain/tools/test_runner_kernel_config"
)
validpgpkeys=(
